{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MongoDbSettings": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "TourismAppDb",
    "UsersCollectionName": "TouristUsers",
    "PostsCollectionName": "TouristPosts",
    "FeedbacksCollectionName": "TouristFeedbacks"
  },
  "Jwt": {
    "Key": "YourSuperSecureJWTKeyThatIsAtLeast32CharsLong!",
    "Issuer": "yourdomain.com",
    "Audience": "yourdomain.com",
    "LifespanMinutes": 30
  },
  "Authentication": {
    "Google": {
      "ClientId": "your-client-id-here",
      "ClientSecret": "your-client-secret-here"
    }
  }

}
